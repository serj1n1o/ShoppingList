<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FirstTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/twelve_space</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">@dimen/sixteen_size_text</item>
        <item name="android:textStyle">bold</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="RegularText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/two_space</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">@dimen/fourteen_size_text</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/four_space</item>
        <item name="android:layout_marginTop">@dimen/four_and_half_space</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">@dimen/twenty_two_size_text</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="DialogTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">@dimen/twenty_four_size_text</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="NameList">
        <item name="android:layout_width">@dimen/zero_space</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/two_space</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">@dimen/sixteen_size_text</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="DialogYesButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/six_space</item>
        <item name="android:textColor">?attr/colorButtonText</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">@dimen/fourteen_size_text</item>
        <item name="android:textStyle">bold</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="DialogNoButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/six_space</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">@dimen/fourteen_size_text</item>
        <item name="android:textStyle">bold</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
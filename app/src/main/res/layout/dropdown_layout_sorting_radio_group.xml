<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/sortGroup"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/sortAlphabet"
            android:drawableStart="@drawable/ic_sort_alphabet"
            android:text="@string/sort_alphabet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/sortUser"
            android:drawableStart="@drawable/ic_sort_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_user_text" />
    </RadioGroup>
</LinearLayout>